<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section><%= render 'shared/user_info', current_user: @user %></section>
    <section><%= render 'shared/stats' %></section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? 
      @feed_items =  @microposts %>
      <%= render 'shared/feed' %>
    <% end %>
  </div>
</div>
